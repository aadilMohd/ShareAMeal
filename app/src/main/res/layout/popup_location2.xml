<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainsection"
    android:layout_width="414dp"
    android:layout_height="640dp"
    android:background="@drawable/lblue_rectange">


    <TextView
        android:id="@+id/locationc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Enter your Address"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/confirmlocationbutton"
        android:layout_width="163dp"
        android:layout_height="68dp"

        android:layout_marginTop="140dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/button_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.821"
        app:layout_constraintStart_toEndOf="@+id/dismisslocationbutton"
        app:layout_constraintTop_toBottomOf="@+id/newaddress">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="162dp"
            android:layout_height="61dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Set Address"
            android:textColor="@color/white"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.571" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dismisslocationbutton"
        android:layout_width="163dp"
        android:layout_height="68dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/button_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newaddress">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="160dp"
            android:layout_height="58dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Dismiss"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/newaddress"
        android:layout_width="367dp"
        android:layout_height="74dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:inputType="textLongMessage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/locationc"
        app:layout_constraintStart_toStartOf="@+id/locationc"
        app:layout_constraintTop_toBottomOf="@+id/locationc"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>